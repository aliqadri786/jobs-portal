<% content_for :devise_form do  %>
  <h2 class="pt-4 mb-8 text-4xl font-bold heading">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="input-group mb-6">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2"  %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="input-group mb-6">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6 input-checkbox ">
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:"label font-bold" %>
      <% end -%>
    </div>

    <div class="input-group">
      <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>

  <% end %>

  <hr class="mt-6 border" />

  <%= render "devise/shared/links" %>

<% end %>
<%= render "devise/shared/form_wrap" %>
